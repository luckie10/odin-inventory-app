extend layout

block content
  h1 #{title}: #{category.name}

  if items_in_category.length
    p #[strong Delete the following items before attempting to delete the category.]
    h2 Items 
      ul
        each item in items_in_category
          li 
            a(href=item.url) #{item.name} 

  else
    p Are you sure you want to delete this item?

    form(method="POST")
      input#itemid(type="hidden" name='itemid' value=category.id)
      button(type='submit') Delete
